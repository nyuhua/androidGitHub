        </activity>
        <activity
            android:name="com.scb.AppSetChoose"
            android:label="@string/appsetchoose" 
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.scb.ItemListView"
            android:label="@string/itemlistview" 
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.scb.UpDateItem"
