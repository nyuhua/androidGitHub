<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="9">
        <TextView android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="GlobalSet"
            android:textSize="20dp"
            android:background="#EEEEE0"/>
    </LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:orientation="vertical">
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="1"
	            android:text="本学期共有"
	            android:gravity="center"/>
	        <EditText android:id="@+id/globalweeks" 
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:text="20"
	            android:layout_weight="2"
	            android:gravity="center"/>
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:text="周"
	            android:layout_weight="2"
	            android:gravity="center"/>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="1.7"
	            android:text="上午第一节课开始时间为"
	            android:gravity="center"/>
	        <EditText android:id="@+id/global_morning_firstClass_start_hours" 
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:text="8"
	            android:layout_weight="3"
	            android:gravity="center"/>
	         <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="点"
	            android:gravity="center"/>
	         <EditText android:id="@+id/global_morning_firstClass_start_minutes"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="2.8"/>
	         <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="分"
	            android:gravity="center"/>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="1.7"
	            android:text="下午第一节课开始时间为"
	            android:gravity="center"/>
	        <EditText android:id="@+id/global_noon_firstClass_start_hours"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="3"
	            android:gravity="center"/>
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="点"
	            android:gravity="center"/>
	        <EditText android:id="@+id/global_noon_firstClass_start_minutes"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="2.8"/>
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="分"
	            android:gravity="center"/>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="2"
	            android:text="每节课时长为"
	            android:gravity="center"/>
	        <EditText android:id="@+id/global_time_perclass"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="3"/>
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="分"
	            android:gravity="center"/>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="2"
	            android:text="1.2节休息时间为"
	            android:gravity="center"/>
	        <EditText android:id="@+id/global_first_second_braketime" 
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="3"/>
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="分"
	            android:gravity="center"/>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="2"
	            android:text="2.3节休息时间为"
	            android:gravity="center"/>
	        <EditText android:id="@+id/global_second_third_braketime"
	            android:layout_width="match_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="3"/>
	        <TextView android:layout_height="fill_parent"
	            android:layout_width="match_parent"
	            android:layout_weight="3"
	            android:text="分"
	            android:gravity="center"/>
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	    </LinearLayout>
	    <LinearLayout android:layout_width="fill_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1">
	        <Button android:id="@+id/global_setting_save" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="保存数据"
	            android:background="#6C7B8B"
	            android:layout_marginLeft="2dp"
	            android:layout_marginRight="2dp"
	            android:layout_marginBottom="2dp"/>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>
